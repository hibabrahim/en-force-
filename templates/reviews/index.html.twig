{% extends 'base.html.twig' %}

{% block title %}Reviews index{% endblock %}

{% block body %}
    <h1>Reviews index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_User</th>
                <th>Commentaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.idUser }}</td>
                <td>{{ review.commentaire }}</td>
                <td>
                    <a href="{{ path('app_reviews_show', {'id': review.id}) }}" class="btn btn-primary">Show</a>
                    <a href="{{ path('app_reviews_edit', {'id': review.id}) }} " class="btn btn-secondary">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reviews_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
