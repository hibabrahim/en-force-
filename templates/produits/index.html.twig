{% extends 'back.html.twig' %}

{% block title %}Produits index{% endblock %}

{% block body %}
    <h1>Produits index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>
                    Prix
                    <a href="{{ path('app_produits_index', {'sortBy': 'prixAscending'}) }}">Asc</a>
                    <a href="{{ path('app_produits_index', {'sortBy': 'prixDescending'}) }}">Desc</a>
                </th>
                <th>Ressource</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td><img src= "{{ asset('uploads/' ~produit.Ressource)}}" style=" width:100px; height:100 px; " alt=""></td> 
                <td>
                    <a href="{{ path('app_produits_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_produits_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produits_new') }}">Create new</a>
    <p><a href="{{ path('generator_serviceProd') }}" class="btn btn-primary px-3 py-1">PDF</a></p>


{% endblock %}
